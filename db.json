<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Domain Feed</title>
  <style>
    body { font-family: sans-serif; margin: 20px; }
    h2 { margin-top: 40px; }
    ul { padding-left: 20px; }
  </style>
</head>
<body>
  <h1>Domain Feed Übersicht</h1>

  <div id="feeds"></div>

  <script>
    const feedNames = ['3star', '2star', '1star'];
    const baseURL = window.location.origin;

    async function loadFeed(stars) {
      const res = await fetch(`${baseURL}/feed-${stars}star`);
      const data = await res.json();
      return data.map(entry => `<li><strong>${entry.domain}</strong> – $${entry.price} – <a href="${entry.link}" target="_blank">Link</a></li>`).join('');
    }

    (async () => {
      const container = document.getElementById('feeds');
      for (let star of feedNames) {
        const items = await loadFeed(star);
        container.innerHTML += `<h2>Feed ${star}★</h2><ul>${items}</ul>`;
      }
    })();
  </script>
</body>
</html>

